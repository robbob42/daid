{
    "manifest_version": 3,
    "name": "DAID",
    "version": "1.0",
    "description": "Dungeons and AI and Dragons.",
    "action": {
        "default_icon": "dragons.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://gemini.google.com/*"
    ],
    "background": {
        "service_worker": "service_worker.js"
    }
}